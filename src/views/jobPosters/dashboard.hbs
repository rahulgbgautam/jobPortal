{{>headers}}
<div class="d-flex justify-content-end mt-5 mr-5">
    <a href="/jobPosters/logout" class="btn btn-primary">LogOut</a>
</div>
<div class="d-flex justify-content-center m-3">
    <a href="/jobPosters/addJob" class="btn btn-dark">Add Job</a>
</div>
<div class="col-8 m-auto">
    <table id="example2" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Job Title</th>
                <th>Job Description</th>
                <th colspan="2" class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
        {{#each data}}
            <tr>
                <td>{{this.job_title}}</td>
                <td>{{this.job_description}}</td>
                <td> <a href="/jobPosters/editJob/{{this._id}}">Edit</a></td>
                <td> <a href="/jobPosters/deleteJob/{{this._id}}">Delete</a></td>
            </tr>
        {{/each}}         
        </tbody>
    </table>
</div>
{{>footers}}

